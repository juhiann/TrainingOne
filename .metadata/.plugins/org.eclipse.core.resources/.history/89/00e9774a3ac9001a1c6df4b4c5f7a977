package eightJavaProj;

public class Management {

	// field variables 
	 
	private String name;
	private int empID;
	private int salary;
	private String role;
	
	//setter method
	
	public void setName(String name)
	{
		this.name = name;
	}
	
	public void setEmpID(int empID)
	{
		this.empID = empID;
	}
	
	public void setSalary (int salary)
	{
		this.salary =  salary;
		
	}
	
	public void setRole(String role)
	{
		this.role = role;
	}
	
	
	//getters
	
	public String getName()
	{
		return this.name;
	}
	
	public int getEmpID()
	{
		return this.empID;
	}
	
	public int getSalary()
	{
		return this.salary;
	}
	
	public String getRole()
	{
		return this.role;
	}
	
	//additional methods
	
	void incrementSalary(int x)
	{
		this.salary((this.salary *0.1)+ this.salary);
	}
	
}
