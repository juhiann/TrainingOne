package projectTwelve;

public class MyNumber 
{

	// creating variables 
	int number;
	
	//creating constructors
	public MyNumber(int number)
	{
		this.number = number;
	}
	
	
	
	//additional methods
	
	public boolean isPrime()
	{
		if (number < 2)
		{
			return false;
		}
		
		else {
			for(int i = 2; i <= number-1; i++)
			{
			
				if(number % i == 0)
				{
					return false;
				}
				else return true;
			}
		}
		return false;	
	}
	
	



	
	

	
}
	

	
		
